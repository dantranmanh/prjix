/**
 * Product description template
 *
 * @see Mage_Catalog_Block_Product_View_Description
 */
?>

<?php $_helper = $this->helper('catalog/output'); ?>
<?php $_product = $this->getProduct(); ?>
<!-- ---------------- -->
<?php
$description = $this->getProduct()->getDescription();
$productIngredients = $_product->getResource()->getAttribute('product_ingredients')->getFrontend()->getValue($_product);
$productAttributes = $_product->getResource()->getAttribute('product_attributes')->getFrontend()->getValue($_product);
$productMeasurement = $_product->getResource()->getAttribute('product_measurement')->getFrontend()->getValue($_product);
$productBestBeforeDateShow = $_product->getResource()->getAttribute('product_best_before_date_show')->getFrontend()->getValue($_product);
$productNetWeightKg = $_product->getResource()->getAttribute('product_net_weight')->getFrontend()->getValue($_product);
$manufacturer = $_product->getResource()->getAttribute('manufacturer')->getFrontend()->getValue($_product);


?>
<!-- description -->
<?php if ($description): ?>
    <div class="box-collateral">
        <h2 class="col-md-3"><?php echo $this->__('Product Details') ?></h2>

        <div class="std col-md-9">
            <?php echo $this->helper('catalog/output')->productAttribute($this->getProduct(), $description, 'description') ?>
        </div>
    </div>
<?php endif; ?>

<!-- Ingredients -->
<?php if (!empty($productIngredients)): ?>
    <div class="box-collateral">
        <h2 class="col-md-3"><?php echo $this->__('Ingredients:') ?></h2>

        <div class="producer-note col-md-9">
            <?php echo $productIngredients; ?>
        </div>
    </div>
<?php endif; ?>


<!-- product Attributes -->
<?php if (!empty($productAttributes)): ?>
    <div class="box-collateral">
        <h2 class="col-md-3"><?php echo $this->__('Product attributes:') ?></h2>

        <div class="col-md-9">
            <?php echo $productAttributes; ?>
        </div>
    </div>
<?php endif; ?>


<!-- product Best Before Date -->
<?php if (!empty($productBestBeforeDate)): ?>
    <div class="box-collateral">
        <h2 class="col-md-3"><?php echo $this->__('Best before date:') ?></h2>

        <div class="col-md-9">
            <?php echo $productBestBeforeDate; ?>
        </div>
    </div>
<?php endif; ?>


<!-- product Net Weight Kg -->
<?php if (!empty($productNetWeightKg)): ?>
    <div class="box-collateral">
        <h2 class="col-md-3"><?php echo $this->__('Net weight:') ?></h2>

        <div class="col-md-9">
            <?php echo $productNetWeightKg . ' ' . $productMeasurement; ?>
        </div>
    </div>
<?php endif; ?>


<!-- manufacturer -->
<?php if (!empty($manufacturer)): ?>
    <div class="box-collateral">
        <h2 class="col-md-3"><?php echo $this->__('Brand:') ?></h2>

        <div class="col-md-9">
            <?php echo $manufacturer; ?>
        </div>
    </div>
<?php endif; ?>
