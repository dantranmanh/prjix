/**
 * Product description template
 *
 * @see Mage_Catalog_Block_Product_View_Description
 */
?>

<?php $_helper = $this->helper('catalog/output'); ?>
<?php $_product = $this->getProduct(); ?>
<!-- ---------------- -->
<?php
$description = $this->getProduct()->getDescription();
$brand = $_product->getResource()->getAttribute('brands')->getFrontend()->getValue($_product);

?>
<!-- description -->
<?php if ($description): ?>
    <div class="box-collateral">
        <h2 class="col-md-3"><?php echo $this->__('Description:') ?></h2>

        <div class="std col-md-9">
            <?php echo $this->helper('catalog/output')->productAttribute($this->getProduct(), $description, 'description') ?>
        </div>
    </div>
<?php endif; ?>


<!-- Brands -->
<?php if (!empty($brand)): ?>
    <div class="box-collateral">
        <h2 class="col-md-3"><?php echo $this->__('Brand:') ?></h2>

        <div class="col-md-9">
            <?php echo $brand; ?>
        </div>
    </div>
<?php endif; ?>
