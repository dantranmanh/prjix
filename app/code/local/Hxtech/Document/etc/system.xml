<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <hxtech translate="label" module="document">
            <label>Hxtech extension</label>
            <sort_order>400</sort_order>
        </hxtech>
    </tabs>
    <sections>
        <document translate="label" module="document">
            <label>Document</label>
            <tab>hxtech</tab>
            <sort_order>400</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <documentation translate="label" module="document">
                    <label>Documentation</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <filter_enabled translate="label">
                            <label>Enable Rate Filter</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>1</sort_order>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </filter_enabled>
                        <document_type translate="label">
                            <label>Document Type</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[Separated by comma.]]></comment>
                        </document_type>
                    </fields>
                </documentation>
                <supplier translate="label" module="document">
                    <label>Documentation Supplier</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <order_history_template translate="label">
                            <label>Export History Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </order_history_template>
                    </fields>
                </supplier>
            </groups>
        </document>
    </sections>
</config>