<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <otnegam translate="label">
            <label>Otnegam</label>
            <sort_order>100</sort_order>
        </otnegam>
    </tabs>
    <sections>	
        <amastycustom translate="label">
            <label>Custom Filter for Amasty</label>
            <sort_order>1000</sort_order>
            <tab>otnegam</tab>
            <frontend_type>text</frontend_type>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <enable translate="label">
                            <label>Enable Amasty Custom Filter</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Active filter tab: All,new,onsale,instock in category page</comment>
                        </enable>
                        <new translate="label">
                            <label>Number of Days for new product(x days)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>5</show_in_default>
                            <show_in_website>5</show_in_website>
                            <show_in_store>5</show_in_store>
                            <comment>now time - created date less than x days --> this is new product</comment>
                        </new>
                    </fields>
                </general>
            </groups>
        </amastycustom>
    </sections>
</config>